<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.chad.jeejah.library"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="4" />
    <application android:label="@string/app_name" >
        <supports-screens android:largeScreens="true" />
        <activity android:name="Search"
                  android:configChanges="orientation|keyboardHidden"
                  android:label="Drinks">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="RecipeActivity"
                  android:configChanges="orientation|keyboardHidden"
                  android:label="View Drink Recipe">
        </activity>
        <activity android:name="Pantry"
                  android:configChanges="orientation|keyboardHidden"
                  android:label="Set Owned Ingredients">
        </activity>
        <activity android:name="ShoppingListActivity"
                  android:label="Shopping Suggestions">
        </activity>
        <activity android:name="Feedback"
                  android:label="Feedback and suggestions">
        </activity>
        <activity android:name="Instructions"
                  android:label="How to use">
        </activity>
        <activity android:name="Credits"
                  android:label="Credits">
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest> 
